<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <view
            android:id="@+id/head_bar"
            class="com.jd.ad.demo.view.HeadBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_primary"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/add_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple_200"
                android:layout_marginRight="30dp"
                android:text="加载模板"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/add_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple_200"
                android:text="加载广告"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/view_all_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_0_v"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="模板组件"
                android:textColor="@color/color_primary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_1_v"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="模板组件"
                android:textColor="@color/color_primary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_2_v"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="模板组件"
                android:textColor="@color/color_primary"
                android:textSize="25sp" />

            <FrameLayout
                android:id="@+id/ad_container_v"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@color/color_primary"
                tools:layout_height="100dp"
                tools:layout_width="100dp" />

        </LinearLayout>


    </ScrollView>

    <HorizontalScrollView
        android:id="@+id/scroll_h"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/view_all_h"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_0_h"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="模板组件"
                android:ems="1"
                android:textColor="@color/color_primary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_1_h"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="模板组件"
                android:ems="1"
                android:textColor="@color/color_primary"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_2_h"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="模板组件"
                android:ems="1"
                android:textColor="@color/color_primary"
                android:textSize="25sp" />

            <FrameLayout
                android:id="@+id/ad_container_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:background="@color/color_primary"
                tools:layout_height="100dp"
                tools:layout_width="100dp" />


        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>